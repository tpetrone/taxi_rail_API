<%= form_for(@driver) do |f| %>
  <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
      <% @driver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row" style="text-align: left;">
  	
  <div class="col-lg-6">
    <%= f.label :"Nome:" %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="col-lg-6">
    <%= f.label :"Fone:" %><br>
    <%= f.telephone_field :phone %>
  </div>
  
    <div class="col-lg-6">
    <%= f.label :"Modelo do carro:" %><br>
    <%= f.text_field :car_model %>
  </div>
  
  
  <%= f.fields_for :user do |u| %>
  		<div class="col-lg-6">  		
  			<%= u.label :email %><br>
			<%= u.text_field :email %>
  		</div>
  		
  		<div class="col-lg-6">
  			<%= u.label :"Senha:" %><br>
			<%= u.password_field :password %>
  		</div>
  		
  		<div class="col-lg-6">
  			<%= u.label :"Confirme a senha:" %><br>
			<%= u.password_field :password_confirmation %>
  		</div>		
  	<% end %>  	
  		
  <div class="col-lg-12" style="margin: 10px 0px; text-align: left;">
    	<%= f.submit "Submit", :class=>"btn btn-info" %>
  	</div>
  
</div>

<% end %>
